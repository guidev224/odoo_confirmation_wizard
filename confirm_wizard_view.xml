<?xml version="1.0" encoding="UTF-8" ?>
<openerp>
    <data>
        <record id="view_odoo_confirm_wizard_form" model="ir.ui.view">
            <field name="model">odoo.confirm.wizard</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <field name="message" readonly="1" nolabel="1" class="text-center" style="font-size:1.2em"/>
                    </group>
                    <footer style="text-align:right">
                        <button name="execute" type="object" string="Yes" class="oe_highlight"
                                style="width: 85px;
                                padding: 5px;"/>
                        <button special="cancel" type="object" string="No"
                                style="width: 85px;
                                padding: 5px;
                                margin-left: 15px;"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</openerp>